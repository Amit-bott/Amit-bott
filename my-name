name: My Name From Contribution Graph

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  build:
    name: Generate Contribution Graph Text
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v3

      - name: Generate Contribution Text
        uses: Amit/my-name@v1
        with:
          # GitHub username jiska contribution graph use hoga
          user_name: Amit
          # Contribution graph par dikhne wala text
          text: AMIT

      - name: Push Changes
        uses: Amit/simple-push-action@v1
